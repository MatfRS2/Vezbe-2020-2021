@model KreirajViewModel

@{
    ViewBag.Naslov = "Kreiraj korisnika";
    Layout = "_AdminLayout";
}

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="KreirajKorisnika" asp-controller="Account" method="post">
    <div class="form-group">
        <div><span class="text-danger" asp-validation-for="Ime"></span></div>
        <label>Ime</label>
        <input asp-for="Ime" class="form-control" />
    </div>
    <div class="form-group">
        <div><span class="text-danger" asp-validation-for="Email"></span></div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <div><span class="text-danger" asp-validation-for="Sifra"></span></div>
        <label>Sifra</label>
        <input asp-for="Sifra" type="password"  class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Sačuvaj</button>
</form>
