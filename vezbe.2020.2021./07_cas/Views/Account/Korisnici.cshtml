@model IEnumerable<MojKorisnik>

@{ 
    ViewBag.Naslov = "Spisak korisnika";
    Layout = "_AdminLayout";
}

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Ime</th>
        <th>Email</th>
    </tr>
    @foreach (MojKorisnik korsnik in Model)
    {
        <tr>
            <td>@korsnik.Id</td>
            <td>@korsnik.UserName</td>
            <td>@korsnik.Email</td>
            <td>
                <form asp-action="Obrisi" asp-route-id="@korsnik.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Obriši
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a class="btn btn-primary btn-block" asp-action="KreirajKorisnika">Kreiraj novog korisnika</a>
</div>