@model SpisakProizvodaViewModel

@{ 
    ViewBag.Title = "Spisak";
}

@foreach(var p in Model.Proizvodi)
{
<div class="card border-info mb-3" style="width: 70%">
    <div class="card-header">
        @p.Ime
        <span class="badge badge-info" style="float:right">
            @p.Cena.ToString("c")
        </span>
    </div>
    <div class="card-body text-dark">
        <p class="card-text">@p.Opis</p>
    </div>

    @ViewBag.ProductCount
</div>
}

<div model-strane="@Model.ModelStrane" akcija="Spisak"></div>

