@model Korpa

@{
    ViewData["Title"] = "Spisak Korpe";
}

<h2>Vasa korpa</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Količina</th>
            <th>Proizvod</th>
            <th>Cena</th>
            <th>Ukupna cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach(KorpaElement element in Model.ListaProizvodaUKorpi)
        {
            <tr>
                <td>@element.Kolicina</td>
                <td>@element.Proizvod.Ime</td>
                <td>@element.Proizvod.Cena.ToString("c", Cultures.Srbija)</td>
                <td>@((element.Proizvod.Cena * element.Kolicina).ToString("c", Cultures.Srbija))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-right">Ukupno</th>
            <th class="text-right">@Model.IzracunajVrednost().ToString("c", Cultures.Srbija)</th>
        </tr>
    </tfoot>
</table>
