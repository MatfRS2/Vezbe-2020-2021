<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" asp-href-include="/lib/bootstrap/**" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/**" />

    <style>
        .input-validation-error {border-color: red; background-color: #fee;}
    </style>
</head>
<body class="m-1 p-1">
    <div class="bg-info p-2">
        <div class="navbar-brand">
            @ViewBag.Title
        </div>
        <div class="float-right">
            <a class="btn btn-sm btn-dark"
               asp-action="Odjava" asp-controller="Account">
                Odjava
            </a>
        </div>
    </div>
    <div>
        @if (TempData["poruka"] != null)
        {
            <div class="alert alert-success">@TempData["poruka"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>
