@model Proizvod

<div class="card border-info mb-3" style="width: 70%">
    <div class="card-header">@Model.Ime
         <span class="badge badge-info" style="float:right">@Model.Cena.ToString("c", Cultures.Srbija)</span>
    </div>
    <form id="@Model.ProizvodID" asp-action="DodajUKorpu" asp-controller="Korpa" method="POST">
        <input type="hidden" asp-for="ProizvodID" />
        <input type="hidden" name="Url" 
            value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Opis
            <button type="submit" class="btn btn-success btn-sm" style="float:right">
                Dodaj u korpu
            </button>
        </span>
    </form>  


</div>